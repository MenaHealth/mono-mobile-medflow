{
  "name": "mono-mobile-medflow",
  "private": true,
  "packageManager": "npm@10.8.2",
  "scripts": {
    "build": "dotenv -e .env.local -- turbo run build --filter=web",
    "predev": "cp .env.local apps/web/.env.local && cp .env.local apps/mobile/.env.local",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "dotenv-cli": "^8.0.0",
    "prettier": "^3.4.2",
    "turbo": "^2.4.0",
    "typescript": "5.7.3"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}